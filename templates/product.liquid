<div class="productCard">
  <div>
    <h1>{{ product.title }}</h1>
    <img src="{{ product.featured_image | image_url : width : 800 }}" alt="" />
    <p>{{ product.price | money_with_currency }}</p>
    <div>{{ product.description }}</div>
    {% form 'product', product %}
    <select name="id" class="primaryBtn">
      {%for variant in product.variants %}
      <option value="{{ variant.id }}">{{ variant.title }}</option>
      {% endfor %}
    </select>
    <button type="submit" class="primaryBtn">Add to cart</button>
    {%endform%}
  </div>
</div>
