@import url("https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100&display=swap");

* {
  padding: 0;
  margin: 0 auto;
}
body {
  padding: 0;
  margin: 0 auto;
  font-family: "Montserrat", sans-serif;
}
a {
  text-decoration: none;
  color: black;
}
a:active {
  color: gray;
}
h1,
h2,
h3,
h4,
p {
  width: 100%;
  text-align: left;
}
.navigationbar {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 20px;
  background-color: aquamarine;
  box-sizing: border-box;
}
.navigationbar li {
  list-style-type: none;
  box-sizing: border-box;
}
.menuList_big {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20px;
  box-sizing: border-box;
}
.menuList_big li {
  width: fit-content;
  display: grid;
  position: relative;
  place-items: center;
  padding: 10px;
  font-weight: bold;
}
.menuList_big li:hover {
  color: rgba(131, 123, 123, 0.726);
}
.menuList_big li::after {
  content: "";
  width: 0%;
  height: 2px;
  background-color: red;
  position: absolute;
  left: 0;
  bottom: 5px;
  transition: all ease-in-out 200ms;
}
.menuList_big li:hover::after {
  width: 100%;
}
.primaryBtn {
  color: white;
  background-color: black;
  padding: 10px 20px;
  border-radius: 8px;
}

.signinSingupCart {
  display: flex;
  align-items: center;
  gap: 20px;
}

.primaryBtn:hover {
  background-color: rgba(0, 0, 0, 0.726);
  box-shadow: 0 0 0 2px 0 gray;
}

.indexPage {
  display: grid;
  place-items: center;
}
.hero {
  width: 100%;
  height: 500px;

  display: grid;
  place-content: center;
  background: linear-gradient(177deg, #14e2ab, #76acbd, #8dada8);
  background-size: 600% 600%;

  -webkit-animation: AnimationName 40s ease infinite;
  -moz-animation: AnimationName 40s ease infinite;
  animation: AnimationName 40s ease infinite;
}

@-webkit-keyframes AnimationName {
  0% {
    background-position: 84% 0%;
  }
  50% {
    background-position: 17% 100%;
  }
  100% {
    background-position: 84% 0%;
  }
}
@-moz-keyframes AnimationName {
  0% {
    background-position: 84% 0%;
  }
  50% {
    background-position: 17% 100%;
  }
  100% {
    background-position: 84% 0%;
  }
}
@keyframes AnimationName {
  0% {
    background-position: 84% 0%;
  }
  50% {
    background-position: 17% 100%;
  }
  100% {
    background-position: 84% 0%;
  }
}
.hero_content {
  width: 50%;
  padding: 20px;
  text-align: center;
  display: grid;
  gap: 20px;
}
.hero_content h2 {
  font-size: 72px;
  background: -webkit-linear-gradient(
    -185deg,
    rgb(168, 88, 88),
    rgb(53, 18, 18)
  );
  background-size: 400% 400%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  animation: textgradient 10s infinite;
}
.hero_content p {
  font-weight: 500;
}
@keyframes textgradient {
  0% {
    background-position: 84% 0%;
  }
  50% {
    background-position: 17% 100%;
  }
  100% {
    background-position: 84% 0%;
  }
}
.cataloges {
  width: 80%;
  display: grid;
  gap: 20px;
  box-sizing: border-box;
  padding: 20px;
}
.cataloges h2 {
  width: 100%;
  text-align: left;
}
.catalogueItems {
  width: 100%;

  display: flex;
  flex-wrap: wrap;
  grid-template-columns: 1fr, 1fr, 1fr, 1fr;
  gap: 20px;
}
.items_card {
  width: fit-content;
  background-color: white;
  padding: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: start;

  gap: 8px;
  text-align: left;
  box-shadow: 0 0 4px 0 rgba(73, 73, 73, 0.753);
  border-radius: 8px;
  transition: all ease-in-out 200ms;
}
.items_card h4,
p {
  width: 100%;
  text-align: left;
}

.items_card img {
  border-radius: 4px;
}
.items_card:hover {
  border-radius: 0;
  scale: 1.1;
}
.productCard {
  width: 100%;
  padding: 20px;
  display: grid;
  place-items: center;
  gap: 20px;
}
.productCard div {
  display: grid;
  text-align: left;
  gap: 20px;
}
select {
  outline: none;
}
