.primaryBtn {
  color: var(--btnTextColors);
  background-color: var(--buttonColor);
  padding: 10px 20px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  font-weight: 600;
}

.signinSingupCart {
  display: flex;
  align-items: center;
  gap: 20px;
}

.primaryBtn:hover {
  background-color: var(--buttonColor);

  box-shadow: 0 0 0 2px 0 gray;
}

.indexPage {
  display: grid;
  place-items: center;
}
.hero {
  width: 100%;
  height: 500px;

  display: grid;
  place-content: center;
  background: linear-gradient(
    122deg,
    var(--dark),
    var(--lightDark),
    var(--light)
  );
  background-size: 400% 400%;

  -webkit-animation: AnimationName 40s ease infinite;
  -moz-animation: AnimationName 40s ease infinite;
  animation: AnimationName 40s ease infinite;
}

@-webkit-keyframes AnimationName {
  0% {
    background-position: 84% 0%;
  }
  50% {
    background-position: 17% 100%;
  }
  100% {
    background-position: 84% 0%;
  }
}
@-moz-keyframes AnimationName {
  0% {
    background-position: 84% 0%;
  }
  50% {
    background-position: 17% 100%;
  }
  100% {
    background-position: 84% 0%;
  }
}
@keyframes AnimationName {
  0% {
    background-position: 84% 0%;
  }
  50% {
    background-position: 17% 100%;
  }
  100% {
    background-position: 84% 0%;
  }
}
.hero_content {
  width: 50%;
  padding: 20px;
  text-align: center;
  display: grid;
  place-items: center;
  gap: 20px;
}
.hero_content h2 {
  font-size: 72px;

  text-align: center;
}
.hero_content p {
  font-size: 20px;
  font-weight: 500;
  text-align: center;
}
