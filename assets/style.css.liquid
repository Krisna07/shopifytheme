@import url("https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100&display=swap");

* {
  padding: 0;
  margin: 0 auto;
}
:root {
  /* colors */
  --dark: #c4dfdf;
  --lightDark: #d2e9e9;
  --light: #e3f4f4;
  --lighter: #f8f6f4;
  --textColor: #080202;

  /* font size*/
  --defaultSize: 16px;
  --small: 12px;
  --large: 20px;
  --xl: 32px;
  /* shadows */
  --normal: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
  --lighter: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px,
    rgba(0, 0, 0, 0.3) 0px 30px 60px -30px,
    rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset;
  --darker: rgba(0, 0, 0, 0.25) 0px 54px 55px,
    rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px,
    rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;
}
body {
  padding: 0;
  margin: 0 auto;
  font-family: "Montserrat", sans-serif;
  background-color: var(--lighter);
  font-size: var(--defaultSize);
  color: var(--textColor);
}
a {
  text-decoration: none;
  color: var(--textColor);
}
a:hover {
  color: var(--lighter);
}

h1,
h2,
h3,
h4,
p {
  width: 100%;
  text-align: left;
}
.navigationbar {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 20px;
  background-color: var(--dark);
  box-sizing: border-box;
}
.navigationbar li {
  list-style-type: none;
  box-sizing: border-box;
}
.menuList_big {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20px;
  box-sizing: border-box;
}
.storetitle {
  font-weight: 600;
}
.menuList_big li {
  width: fit-content;
  display: grid;
  position: relative;
  place-items: center;
  padding: 10px;
  font-weight: bold;
}
.head_text_gradient {
  background: #080202;
  background: linear-gradient(to top, #080202 21%, #f8f6f4 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
