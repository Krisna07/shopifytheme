@import url("https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100&display=swap");

* {
  padding: 0;
  margin: 0 auto;
}
body {
  padding: 0;
  margin: 0 auto;
  font-family: "Montserrat", sans-serif;
}
a {
  text-decoration: none;
  color: black;
}
a:active {
  color: gray;
}
.navigationbar {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 20px;
  background-color: aquamarine;
  box-sizing: border-box;
}
.navigationbar li {
  list-style-type: none;
  box-sizing: border-box;
}
.menuList_big {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20px;
  box-sizing: border-box;
}
.menuList_big li {
  width: fit-content;
  display: grid;
  position: relative;
  place-items: center;
  padding: 10px;
  font-weight: bold;
}
.menuList_big li:hover {
  color: rgba(131, 123, 123, 0.726);
}
.menuList_big li::after {
  content: "";
  width: 0%;
  height: 2px;
  background-color: red;
  position: absolute;
  left: 0;
  bottom: 5px;
  transition: all ease-in-out 200ms;
}
.menuList_big li:hover::after {
  width: 100%;
}
.primaryBtn {
  color: white;
  background-color: black;
  padding: 10px 20px;
  border-radius: 8px;
}

.signinSingupCart {
  display: flex;
  align-items: center;
  gap: 20px;
}

.primaryBtn:hover {
  background-color: rgba(0, 0, 0, 0.726);
  box-shadow: 0 0 0 2px 0 gray;
}
