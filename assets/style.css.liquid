.cataloges {
  width: 80%;
  display: grid;
  gap: 20px;
  box-sizing: border-box;
  padding: 20px;
}
.cataloges h2 {
  width: 100%;
  text-align: left;
}
.catalogueItems {
  width: 100%;

  display: flex;
  flex-wrap: wrap;
  grid-template-columns: 1fr, 1fr, 1fr, 1fr;
  gap: 20px;
}
.items_card {
  width: fit-content;
  background-color: var(--lighter);
  padding: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: start;

  gap: 8px;
  text-align: left;
  box-shadow: var(--lighter);
  border-radius: 8px;
  transition: all ease-in-out 200ms;
}
.items_card h4,
p {
  width: 100%;
  text-align: left;
}

.items_card img {
  border-radius: 4px;
}
.items_card:hover {
  border-radius: 0;
  scale: 1.1;
}
.productCard {
  width: 100%;
  padding: 20px;
  display: grid;
  place-items: center;
  gap: 20px;
}
.productCard div {
  display: grid;
  text-align: left;
  gap: 20px;
}
select {
  outline: none;
}

/* contact from styles */
.first-name label,
.last-name label,
.phone label,
.email label,
.order-number label,
.message label {
  display: block;
  margin-bottom: 5px;
}

.first-name input[type="text"],
.last-name input[type="text"],
.phone input[type="tel"],
.email input[type="email"],
.order-number input[type="text"],
.message textarea {
  width: 100%;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.submit input[type="submit"] {
  padding: 10px 20px;
  background-color: #333;
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.submit input[type="submit"]:hover {
  background-color: #555;
}
.request-type select {
  width: 100%;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
}
.request-type select option {
  padding: 4px 0;
}

h1 {
  font-family: "Arial", sans-serif;
  font-size: 36px;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-top: 40px;
}

form div {
  font-family: "Arial", sans-serif;
  font-size: 18px;
  color: #666;
  margin: 20px auto;
  width: 80%;
  line-height: 1.5;
}
/* error page */
.container {
  margin: 0 auto;
  padding: 20px;
  text-align: center;
}

.error-image {
  width: 100%;
  margin-bottom: 20px;
}

.error-heading {
  font-size: 36px;
  color: #333;
  margin-bottom: 20px;
}

.error-message {
  font-size: 18px;
  color: #666;
  margin-bottom: 20px;
}

.error-link {
  color: #007bff;
  text-decoration: none;
}

.error-link:hover {
  text-decoration: underline;
}
